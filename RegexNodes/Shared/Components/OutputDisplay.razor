@inject INodeHandler NodeHandler
@inject IJSRuntime JSRuntime

<h3 style="margin:7px 10px 7px 7px; display:inline-block;">Output:</h3>
@*<div class="textbox" style="
    display: inline;
    font-size: 30px;
    font-family: Consolas, monospace;">
    @NodeHandler.CachedOutput
</div>*@
<span class="output-regex">@NodeHandler.CachedOutput</span>
<button class="output-regex output-clipboard-button" @onclick="CopyTextToClipboard"><i class="far fa-clipboard"></i></button>

@functions{

    protected override void OnInitialized()
    {
        NodeHandler.OnOutputHasChanged += StateHasChanged;
    }

    private async Task CopyTextToClipboard()
    {
        await JSRuntime.InvokeVoidAsync("clipboardCopy.copyText", NodeHandler.CachedOutput);
    }
}
